{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src", "scripts"],
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist", "**/*.d.ts"]
}
