{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "types": ["jest"],
    "paths": {
      "@adapters/*": ["./adapters/*"],
      "@services/*": ["./services/*"],
      "@types/*": ["./types/*"],
      "@constants/*": ["./constants/*"],
      "@abis/*": ["./abis/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
