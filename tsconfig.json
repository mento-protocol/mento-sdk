{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.*"]
}
